
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section class="hero is-fullheight">
    <div class="hero-body">
      <div class="container has-text-centered">
        <div class="column is-4 is-offset-4">
          <h3 class="title has-text-black">Login</h3>
          <hr class="login-hr">
          <p class="subtitle has-text-black">Please login to proceed.</p>
          <div class="box">
            <form>
              <div class="field">
                <div class="control">
                  <label class="label">Email</label>
                  <%= f.email_field :email, class: "input is-large"%>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <%= f.password_field :password, class: "input is-large"%>
                </div>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <label class="checkbox">
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      Remember me
                    </div>
                  </label>
                </div>
              <% end %>



              <%= f.submit "Login", class: "button is-block is-info is-large is-fullwidth" %>


            </form>
          </div>

          <p class="has-text-grey">
            <a><%= link_to "Sign up", new_registration_path(resource_name) %> </a>&nbsp;·&nbsp;
            <a><%= link_to "Forgot your password?", new_password_path(resource_name) %></a>&nbsp;·&nbsp;

            <a href="../">Need Help?</a>
          </p>

        </div>
      </div>
    </div>
  </section>



<% end %>

<script async type="text/javascript" src="../js/bulma.js"></script>