<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <section class="hero is-fullheight">
    <div class="hero-body">
      <div class="container has-text-centered">
        <div class="column is-4 is-offset-4">
          <h3 class="title has-text-black">Sign Up</h3>
          <hr class="login-hr">
          <p class="subtitle has-text-black">Create a Portfolio Portal Account <br> It's free!</p>
          <div class="box">
            <form>
              <div class="field">
                <div class="control">
                  <label class="label">Email</label>
                  <%= f.email_field :email, class: "input is-large" %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <label class="label">Username</label>
                  <%= f.text_field :username, class: "input is-large" %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <label class="label">Password</label>

                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br/>
                  <%= f.password_field :password, class: "input is-large" %>
                </div>
              </div>
              <div class="field">
                <div class="control">
                  <label class="label">Confirm Password</label>
                  <%= f.password_field :password_confirmation, class: "input is-large" %>
                </div>
              </div>

              <%= f.submit "Sign Up", class: "button is-block is-info is-large is-fullwidth" %>


            </form>
          </div>

          <p class="has-text-grey">
            Already have an account?<br>
            <%= render "devise/shared/links" %>
          </p>

        </div>
      </div>
    </div>
  </section>



<% end %>

<script async type="text/javascript" src="../js/bulma.js"></script>