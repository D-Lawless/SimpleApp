<div class="column is-two-thirds">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png">
          <%#= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
        </p>
      </figure>
      <div class="media-content">
        <%#= render 'events/form' %>
      </div>
    </article>
  <% end %>


  <% @events.each do |event| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%#= gravatar_image_tag(event.user.email, size: 64, alt: event.user.name) %>
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= event.user.profile.f_name %> <%= event.user.profile.l_name %></strong><br/>
            <small><%= link_to '@' + event.user.username, event.user.profile %></small><br/>
            <p><%= event.title %></p>
            <p><%= event.about %></p>
            <p><%= event.location %></p>

          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to event, class: "level-item" do %>
                <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
              <% end %>
              <% if user_signed_in? && current_user.id == event.user_id %>

                <%= link_to edit_event_path(event), class: "level-item" do %>
                  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to event, method: :delete, data: {confirm: "Are you sure you want to delete this event?"} do %>
                  <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <% end %>
              <% end %>

            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>