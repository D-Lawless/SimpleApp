<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>About</th>
    <th>Location</th>
    <th>User</th>
    <th>Posts</th>

  </tr>
  </thead>

  <tbody>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.title %></td>
      <td><%= event.about %></td>
      <td><%= event.location %></td>
      <td><%= link_to event.user.username, profile_path(event.user.id) %></td>
      <td><%= event.eventposts.count %></td>

      <td><%= link_to 'Show', event %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
