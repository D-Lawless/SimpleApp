<%= form_with(model: event, local: true) do |f| %>
    <section class="hero is-fullheight">
      <div class="hero-body">
        <div class="container has-text-centered">
          <div class="column is-8 is-offset-2">
            <h3 class="title has-text-black">New Event</h3>
            <hr class="login-hr">
            <p class="subtitle has-text-black">Please Complete The Following:</p>
            <div class="box">
              <form>
                <div class="field">
                  <div class="control">
                    <label class="label">Title</label>

                    <%= f.text_field :title, class: "input is-large"%>
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <label class="label">About</label>

                    <%= f.text_area :about, class: "input is-large textarea is-info", rows:"10" %>
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <label class="label">Location</label>

                    <%= f.text_field :location, class: "input is-large"%>
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <label class="label">Start Date</label>

                    <%= f.date_field :start_dt, class: "input is-large"%>
                  </div>
                </div>
                <div class="field">
                  <div class="control">
                    <label class="label">End Date</label>

                    <%= f.date_field :end_dt, class: "input is-large"%>
                  </div>
                </div>


                <%= f.submit "Create Event", class: "button is-block is-info is-large is-fullwidth" %>


              </form>
            </div>

          </div>
        </div>
      </div>
    </section>



  <% end %>











































