<p id="notice"><%= notice %></p>

<section class="section" id="about">
  <div class="section-heading has-text-centered ">
    <h3 class="title is-2">Connections</h3>
    <h4 class="subtitle is-5">See Who's Connected</h4>
    <div class="columns">
      <% @connections.each do |connection| %>
        <div class="column is-one-quarter is-mobile">
          <!-- Profile -->
          <div class="card  ">
            <h3 class="title has-text-centered is-4"><%= connection.contact.username %></h3>

            <div class="card-image">
              <figure class="image container is-128x128">
                <img src="https://bulma.io/images/placeholders/256x256.png">
              </figure>
            </div>
            <div class="card-content  ">

              <div class="content">
                <table class="table-profile">
                  <tr>
                    <th colspan="1"></th>
                    <th colspan="2"></th>
                  </tr>
                  <tr>
                    <td>Name:</td>
                    <td><%= connection.contact.profile.f_name %> <%= connection.contact.profile.l_name %></td>
                  </tr>
                  <tr>
                    <td>Role:</td>
                    <td><%= connection.contact.profile.role %></td>
                  </tr>
                  <tr>
                    <td>Email:</td>
                    <td>minion@despicable.me</td>
                  </tr>
                </table>
              </div>
              <br>
              <div class="buttons has-addons is-centered">
                <a href="#" class="button is-link">LinkedIn</a>
                <a href="#" class="button is-link">Facebook</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>


